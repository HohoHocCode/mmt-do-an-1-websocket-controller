{
  "version": 3,
  "configurePresets": [
    {
      "name": "mingw64",
      "generator": "Ninja",
      "binaryDir": "build",
      "cacheVariables": {
        "CMAKE_MAKE_PROGRAM": "ninja",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-mingw-static"
      }
    },
    {
      "name": "codex-linux",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/codex-linux",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/toolchains/vcpkg_optional.cmake"
      }
    },
    {
      "name": "windows-msvc",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/windows-msvc"
    },
    {
      "name": "windows-msvc-vcpkg",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/windows-msvc-vcpkg",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "mingw64",
      "configurePreset": "mingw64"
    },
    {
      "name": "codex-linux",
      "configurePreset": "codex-linux"
    },
    {
      "name": "windows-msvc",
      "configurePreset": "windows-msvc",
      "configuration": "Release"
    },
    {
      "name": "windows-msvc-vcpkg",
      "configurePreset": "windows-msvc-vcpkg",
      "configuration": "Release"
    }
  ],

  "testPresets": [
    {
      "name": "codex-linux",
      "configurePreset": "codex-linux",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
